<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StartCheckerApp.Views.FullListPage"
             Title="StartovnÃ­ listina">

    <StackLayout Padding="10">


        <CollectionView x:Name="RunnersList" SelectionMode="Single" SelectionChanged="OnRunnerSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" BackgroundColor="Gray">
                        <StackLayout>
                            <Label Text="{Binding FirstName}" FontSize="18"/>
                            <Label Text="{Binding Surname}" FontSize="18"/>
                            <Label Text="{Binding Category}" FontSize="15" TextColor="Black"/>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
