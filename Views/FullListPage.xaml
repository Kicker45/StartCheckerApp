<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StartCheckerApp.Views.FullListPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Přidat závodníka" Order="Primary" Clicked="OnAddRunnerClicked"/>
    </ContentPage.ToolbarItems>
    
    <Grid RowDefinitions="Auto,*">
        <!-- Vlastní horní lišta -->
        <Grid BackgroundColor="Black" Padding="10" HeightRequest="50" >
            <Label x:Name="TimeLabel" FontSize="25" TextColor="White"
                   FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="5" >
                <CollectionView x:Name="RunnersList" SelectionMode="Single" SelectionChanged="OnRunnerSelected" >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5" Margin="5" BackgroundColor="#D9D9D9">
                                <StackLayout>
                                    <Label Text="{Binding FirstName}" FontSize="20" FontAttributes="Bold"/>
                                    <Label Text="{Binding Surname}" FontSize="20" FontAttributes="Bold"/>
                                    <Label Text="{Binding Category}" FontSize="16" TextColor="Black"/>
                                    <Label Text="{Binding StartTime, StringFormat='Start: {0:HH:mm:ss}'}" FontSize="16"/>
                                    <Label Text="{Binding SINumber, StringFormat='SI Čip: {0}'}" FontSize="16"/>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
