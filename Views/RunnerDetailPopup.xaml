<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="StartCheckerApp.Views.RunnerDetailPopup">

    <VerticalStackLayout Padding="20" BackgroundColor="White">
        <Label Text="Úprava závodníka" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry x:Name="RegistrationNumberEntry" Placeholder="Registrační číslo"/>
        <Entry x:Name="FirstNameEntry" Placeholder="Křestní jméno"/>
        <Entry x:Name="SurnameEntry" Placeholder="Příjmení"/>
        <Entry x:Name="CategoryEntry" Placeholder="Kategorie"/>
        <Entry x:Name="SINumberEntry" Placeholder="Číslo SI čipu" Keyboard="Numeric"/>
        <Entry x:Name="StartTimeEntry" Placeholder="Startovní čas" Keyboard="Time"/>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Uložit" BackgroundColor="Green" Clicked="OnSaveClicked"/>
            <Button Text="Zavřít" BackgroundColor="Red" Clicked="OnCloseClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
