<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StartCheckerApp.MainPage"
             BackgroundColor="White">

    <Grid>
        <!-- Horní část s názvem a indikátory -->
        <Grid RowDefinitions="Auto,*">
            <!-- Horní menu -->
            <Grid BackgroundColor="#2196F3" Padding="10" Row="0">
                <Label Text="StartChecker"
                       TextColor="White"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Hlavní obsah -->
            <Grid Row="1" Padding="10">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="Vítejte v aplikaci StartChecker!"
                           FontSize="18"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <Button Text="Načíst startovní listinu"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="16"
                            Margin="0,20,0,0"
                            Clicked="OnLoadStartListClicked"/>
                </StackLayout>
            </Grid>
            <Grid Row="1" Padding="10">
                <Button Text="Načíst startovní listinu"
        Clicked="OnNavigateToGetStartlist" />
                <Button Text="Seznam závodníků"
        Clicked="OnNavigateToFullList" />
            </Grid>

        </Grid>
    </Grid>
</ContentPage>
